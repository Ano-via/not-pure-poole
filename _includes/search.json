[
  {% for post in site.posts %}
    {
      "title": "{{ post.title | escape }}",
      "url": "{{ post.url }}",
      "date": "{{ post.date | date_to_string }}",
      "content": "{{ post.content | strip_html | strip_newlines | escape }}"
    }{% if forloop.last == false %},{% endif %}
  {% endfor %}
]
